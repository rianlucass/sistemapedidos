<div class="container mt-4 login-form">
    <div class="row">
        <!-- Banner do restaurante -->
        <div class="col-12">
            <div class="card shadow-sm">
                <img src="/path/to/banner.jpg" class="card-img-top rounded" alt="Banner do Restaurante">
                <div class="card-body text-center">
                    <img src="/path/to/logo.jpg" class="rounded-circle" width="100" height="100" alt="Logo">
                    <h1 class="mt-2">{{restaurante.nome}}</h1>
                    <p class="text-muted">{{restaurante.descricao}}</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <!-- Pedidos Recentes -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Pedidos Recentes</h3>
                </div>
                <div class="card-body">


                </div>
            </div>
        </div>
        
        <!-- Ações Rápidas -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h3 class="mb-0">Ações Rápidas</h3>
                </div>
                <div class="card-body d-grid gap-3">
                    <a href="/restaurante/cardapio" class="btn btn-outline-primary">Gerenciar Cardápio</a>
                    <a href="/restaurante/pedidos" class="btn btn-outline-success">Ver Pedidos</a>
                </div>
            </div>
        </div>
    </div>
</div>
