<div class="container mt-5">
    <h1 class="text-center mb-4">Gerenciamento de Cardápio</h1>
    
    <div class="card p-4 shadow-sm">
        <h2 class="mb-3">Adicionar Novo Prato</h2>
        <form action="/restaurante/cardapio/salvar" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="nome" class="form-label">Nome do Prato</label>
                <input type="text" class="form-control" id="nome" name="nome" required>
            </div>
            <div class="mb-3">
                <label for="descricao" class="form-label">Descrição</label>
                <textarea class="form-control" id="descricao" name="descricao" rows="3" required></textarea>
            </div>
            <div class="mb-3">
                <label for="preco" class="form-label">Preço</label>
                <input type="number" step="0.01" class="form-control" id="preco" name="preco" required>
            </div>
            <div class="mb-3">
                <label for="imagem" class="form-label">Imagem do Prato</label>
                <input type="file" class="form-control" id="imagem" name="imagem" accept="image/*">
            </div>

            <input type="hidden" name="id_restaurante" value="{{restaurante.id}}">

            <button type="submit" class="btn btn-primary">Adicionar</button>
        </form>
    </div>
    
    <div class="mt-5">
        <h2 class="mb-3">Cardapio</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Imagem</th>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Preço</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {{#each pratos}}
                <tr>
                    <td><img src="{{imagem}}" alt="{{nome}}" class="img-thumbnail" style="width: 80px;"></td>
                    <td>{{nome}}</td>
                    <td>{{descricao}}</td>
                    <td>R$ {{preco}}</td>
                    <td>
                        <a href="/restaurante/cardapio/editar/" class="btn btn-warning btn-sm">Editar</a>
                        <a href="/restaurante/cardapio/deletar/" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
