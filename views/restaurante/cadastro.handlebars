<div class="login-container">
    <form class="login-form" method="post" action="/restaurante/cadastrar">
        <h2>Cadastre seu Restaurante!</h2>
        <p>Alcance clientes e com SpaceFood<p>
        
        <!-- Campo para o Nome -->
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" id="nome" name="nome" placeholder="Digite seu nome" required>
        </div>
        
        <!-- Campo para o E-mail -->
        <div class="form-group">
            <label for="email">E-mail</label>
            <input type="email" id="email" name="email" placeholder="Digite seu e-mail" required>
        </div>
        
        <!-- Campo para o cnpj -->
        <div class="form-group">
            <label for="cnpj">CNPJ</label>
            <input type="text" id="cnpj" name="cnpj" placeholder="Digite o CNPJ" required>
        </div>

        <!-- Campo para a Descrição -->
        <div class="form-group">
            <label for="descricao">Descrição do Restaurante</label>
            <textarea id="descricao" name="descricao" placeholder="Digite a descrição do restaurante" rows="4" required></textarea>
        </div>
        
        <!-- Campo para a Senha -->
        <div class="form-group">
            <label for="password">Senha</label>
            <input type="password" id="password" name="password" placeholder="Digite sua senha" required>
        </div>
        
        <!-- Botão de Submissão -->
        <button type="submit" class="login-button">Criar Conta</button>
    </form>
</div>