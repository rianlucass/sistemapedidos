<div class="container mt-5">
    <h1 class="text-center mb-4">Perfil do Restaurante</h1>

    <div class="card p-4 shadow-sm">
        <h2 class="mb-3">Informações do Restaurante</h2>

        <div class="mb-3">
            <label class="form-label">Nome</label>
            <p>{{restaurante.nome}}</p>
        </div>

        <div class="mb-3">
            <label class="form-label">CNPJ</label>
            <p>{{restaurante.cnpj}}</p>
        </div>

        <div class="mb-3">
            <label class="form-label">Descrição</label>
            <p>{{restaurante.descricao}}</p>
        </div>

        <div class="mb-3">
            <label class="form-label">Logo do Restaurante</label>
            <p><img src="{{restaurante.logo}}" alt="Logo" class="img-thumbnail" style="width: 100px;"></p>
        </div>

        <h2 class="mb-3 mt-4">Atualizar Logo e Banner</h2>
        <form action="/restaurante/perfil/atualizar" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="logo" class="form-label">Logo do Restaurante</label>
                <input type="file" class="form-control" id="logo" name="logo" accept="image/*">
                <p>Logo atual: <img src="{{restaurante.logo}}" alt="Logo" class="img-thumbnail" style="width: 100px;"></p>
            </div>

            <button type="submit" class="btn btn-primary">Atualizar</button>
        </form>
    </div>
</div>
